# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rpa_platform
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI API Keys (for development/testing)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-vision-preview
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-opus-20240229
GLM_API_KEY=your_glm_api_key

# OCR Service
OCR_SERVICE_URL=http://localhost:8000
OCR_CONFIDENCE_THRESHOLD=0.7

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,bmp

# Sandbox Configuration
DOCKER_SOCKET=/var/run/docker.sock
SANDBOX_TIMEOUT=300000
SANDBOX_IMAGE=rpa-sandbox:latest

# Script Generation
SCRIPT_OUTPUT_DIR=./generated-scripts
SCRIPT_TEMPLATE_DIR=./templates

# Security
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
